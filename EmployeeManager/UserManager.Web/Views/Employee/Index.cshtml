@model UserManager.Web.ViewModels.EmployeeIndexViewModel
@{
    ViewData["Title"] = "Employees";
}
@* CRUD *@
@* C -> Create
R -> Read
U -> Update
D -> Delete *@

@if (TempData["Success"] is not null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

<p>Number of employees: @Model.TotalNumberOfEmployees</p>

<a asp-controller="Employee" asp-action="Add" class="btn btn-primary">Add Employee</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full name</th>
            <th scope="col">Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <th scope="row">@employee.Id</th>
                <td>@employee.FullName</td>
                <td>@employee.Department</td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>